<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <alpha
        android:duration="500"
        android:fromAlpha="0.3"
        android:toAlpha="1.0" />

    <rotate
        android:duration="500"
        android:fromDegrees="-90"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatMode="reverse"
        android:toDegrees="0" />

</set>