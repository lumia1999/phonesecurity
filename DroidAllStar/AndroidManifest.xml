<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.herry.droidallstar"
      android:versionCode="1"
      android:versionName="1.0">
    <supports-screens
      android:largeScreens="true"
      android:normalScreens="true"
      android:smallScreens="true"
      android:anyDensity="true" />
    <application android:icon="@drawable/icon" android:label="@string/app_name"
        android:name=".App">
        <activity android:name=".view.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.BasicInfoActivity"
        	android:label="@string/item_basic_info"/>
		<activity android:name=".view.SystemFeatureActivity"
			android:label="@string/system_feature_label"/>
		<activity android:name=".view.StorageSpeedCheckActivity"
			android:label="@string/item_sdcard_perform_check"/>
		<activity android:name=".view.BootTimeReportSettingActivity"
			android:label="@string/boottime_report_setting_label"/>
		<activity android:name=".view.BootTimeHistoryViewActivity"
		    android:label="@string/boottime_history_activity_label"></activity>
		<activity android:name=".view.TrafficStatActivity"
		    android:label="@string/traffic_stat_label"></activity>
		<receiver android:name=".receiver.Receiver">
			<intent-filter android:priority="1000">
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>
		<service android:name=".service.GetUptimeIntentService"/>
		<service android:name=".service.TrafficStatService" />
    </application>
    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
</manifest> 