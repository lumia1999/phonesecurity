<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="5dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
        <TextView android:id="@+id/product_comment_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/comment_author_font"
            android:text="author"/>
        <TextView android:id="@+id/product_comment_item_ts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/comment_time_font"
            android:text="2011-12-16 09:42"
            android:layout_marginLeft="5dip"/>
    </LinearLayout>
	<TextView android:id="@+id/product_comment_item_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    style="@style/comment_font"
	    android:text="comment content"/>
</LinearLayout>