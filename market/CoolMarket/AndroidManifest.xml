<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.herry.coolmarket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".view.CoolMarketActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainTabActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.HomeActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.CategoryActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.RankActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.ManageActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.ProductDetailActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.PreLoadingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".view.ProductDetailTabActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.CommentActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.ProductDetailScreenshotActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.VaneRankActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.AppRankActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.GameRankActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.EBookRankActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.SearchActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <!-- content provider -->
        <provider
            android:name=".provider.ApkItemProvider"
            android:authorities="com.herry.coolmarket" >
        </provider>
        <!-- receiver -->
        <receiver android:name=".receiver.Receiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- service -->
        <service android:name=".service.CheckService" >
        </service>
    </application>

</manifest>