<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.herry.relaxreader"
    android:versionCode="17"
    android:versionName="01.017" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="12" />

    <permission
        android:name="com.herry.relaxreader.permission.MMOAUTH_CALLBACK"
        android:protectionLevel="normal" >
    </permission>
    <permission
        android:name="com.herry.relaxreader.permission.MM_MESSAGE"
        android:protectionLevel="normal" >
    </permission>

    <uses-permission android:name="com.herry.relaxreader.permission.MMOAUTH_CALLBACK" />
    <uses-permission android:name="com.herry.relaxreader.permission.MM_MESSAGE" />
    <!--  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- ad permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- ad offer permission -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- check new version permission -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- currently in use -->
        <activity
            android:name=".view.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.TitlesStyledActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.FullViewIconActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/customActivityStyle" >
        </activity>
        <activity
            android:name=".view.SettingActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".view.CommentActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/customActivityStyle" >
        </activity>

        <service
            android:name=".service.DynicIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".service.DLUpdateIntentService"
            android:exported="false" >
        </service>

        <!-- Umeng update service -->
        <service
            android:name="com.umeng.common.net.DownloadingService"
            android:exported="true"
            android:process=":DownloadingService" >
        </service>

        <!-- end currently in use -->


        <!-- ad info -->

        <activity
            android:name="net.youmi.android.AdBrowser"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <service
            android:name="net.youmi.android.AdService"
            android:exported="false" >
        </service>

        <receiver android:name="net.youmi.android.AdReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <!-- ad info end -->
        <meta-data
            android:name="YOUMI_CHANNEL"
            android:value="10070" />
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5171090856240b4e890068bb" >
        </meta-data>

        <!-- weixin -->
        <receiver
            android:name="com.tencent.mm.sdk.plugin.MMPluginOAuth$Receiver"
            android:permission="com.tencent.mm.oauth.permission.SEND" >
            <intent-filter>
                <action android:name="com.tencent.mm.sdk.plugin.Intent.ACTION_RESPONSE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.tencent.mm.sdk.channel.MMessage$Receiver"
            android:permission="com.tencent.mm.plugin.permission.SEND" >
            <intent-filter>
                <action android:name="com.tencent.mm.sdk.channel.Intent.ACTION_MESSAGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>