<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/product_title_bar_bg"
    android:gravity="center_vertical" >
	<ImageView android:id="@+id/product_detail_icon"
	    android:layout_width="48dip"
	    android:layout_height="48dip"
	    android:scaleType="centerCrop"
	    android:background="@drawable/ic_launcher"/>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:paddingLeft="5dip"
	    android:orientation="vertical">
	    <TextView android:id="@+id/product_detail_author"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        style="@style/app_description_font"
	        android:text="Author"/>
	    <RelativeLayout android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <TextView android:id="@+id/product_detail_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="marquee"
	            android:gravity="bottom"
	            style="@style/app_name_white_font"
	            android:layout_toLeftOf="@+id/product_detail_download"
	            android:text="name"/>
	        <Button android:id="@+id/product_detail_download"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_dowload"
	            android:layout_alignParentRight="true"
	            android:text="Download"
	            android:layout_marginRight="5dip"/>
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>