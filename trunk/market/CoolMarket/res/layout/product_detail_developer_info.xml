<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_line" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer_info_tip"
        android:textAppearance="@style/app_text_style1"
        android:textColor="@color/black" />

    <LinearLayout android:id="@+id/product_detail_devlink_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="@android:drawable/list_selector_background"
        android:focusable="true"
        android:clickable="true" >
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/devloper_link_tip"
            android:textAppearance="@style/app_text_style2"/>
        <TextView android:id="@+id/product_detail_dev_link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:text="link"
            android:textAppearance="@style/app_text_style4"/>
    </LinearLayout>
	
    <LinearLayout android:id="@+id/product_detail_devcorp_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="@android:drawable/list_selector_background"
        android:focusable="true"
        android:clickable="true" >
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/devloper_corp_tip"
            android:textAppearance="@style/app_text_style2"
            android:layout_above="@+id/product_detail_dev_corp"/>
        <TextView android:id="@+id/product_detail_dev_corp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:text="corp"
            android:textAppearance="@style/app_text_style4"/>
    </LinearLayout>
</LinearLayout>