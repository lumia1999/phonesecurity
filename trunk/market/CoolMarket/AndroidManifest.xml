<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.herry.coolmarket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:name=".view.CoolMarketActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.MainTabActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.HomeActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.CategoryActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.RankActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ManageActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ProductDetailActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.PreLoadingActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ProductDetailTabActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.CommentActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ProductDetailScreenshotActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.VaneRankActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.AppRankActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.GameRankActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.EBookRankActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.SearchActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.SubCategoryTabActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.SubCategoryHottestActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.SubCategoryNewestActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.DailyRecommActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ManageAllAppsActivity" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".view.ManageMarketAppsActivity" >
        </activity>
        <!-- content provider -->
        <provider
            android:authorities="com.herry.coolmarket"
            android:name=".provider.ApkItemProvider" >
        </provider>
        <!-- receiver -->
        <receiver android:name=".receiver.Receiver" >
            <intent-filter >
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter >
                <action android:name="com.herry.coolmarket.DAILY_RECOMM_CHECK_ACTION" />
            </intent-filter>
        </receiver>
        <!-- service -->
        <service android:name=".service.CheckService" >
        </service>
        <service android:name=".service.DailyRecommCheckService" >
        </service>
    </application>

</manifest>