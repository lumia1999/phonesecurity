<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/warrantly_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/warranty_top_bg"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/warrantly_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_holder_large"
        android:padding="5dip"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/warrantly_top_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/warrantly_top_icon"
        android:paddingLeft="10dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/warrantly_top_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="ddd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/warrantly_top_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/warrantly_top_name"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="ddd"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/warrantly_top_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warrantly_top_detail"
            android:layout_marginTop="10dip"
            android:background="@drawable/personal_address_btn_bg_selector"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip"
            android:text="@string/product_evaluate_btn_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</RelativeLayout>