<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:clickable="false"
    android:focusable="false"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="1dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="1dip"
        android:text="ddd"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/item_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_title"
        android:layout_toRightOf="@id/item_title"
        android:background="@drawable/route_selector"
        android:paddingBottom="1dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="1dip"
        android:text="@string/routing"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:paddingBottom="1dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="1dip"
        android:text="address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_address"
        android:paddingBottom="1dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="1dip"
        android:text="telephone"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>