    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".App"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/AppTheme" -->

        <activity
            android:name=".view.MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.WarrantlyActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.EvaluateActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".view.SoftwareListActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.PersonalCenterListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.MsgCenterListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.OrderListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.OrderDetailListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.AddressListActivity"
            android:configChanges="orientation|screenSize" >
