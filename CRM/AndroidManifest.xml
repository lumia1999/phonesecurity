        <activity
            android:name=".view.DetailAddressActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.AddressItemListActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateUnspecified|adjustPan" >
        </activity>
        <activity
            android:name=".view.ShopListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.RouteingActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.TopfreeListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.PurchaseConfirmActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.AddressSelectListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.CityListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.HotmodelListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.ProductDetailActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.ProductMoreDetailListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.ProductParameterListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.ProductCommentListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".view.TestActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor" >
        </activity>
        <!-- service -->
        <service
            android:name=".service.DownloadApkService"
            android:exported="false" >
        </service>
        <service
            android:name=".service.UpdateMsgsIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".service.CrmAdService"
            android:exported="false" >
        </service>

        <!-- provider -->
        <provider
            android:name=".provider.CrmProvider"
            android:authorities="com.doo360.crm"
            android:exported="false" >
        </provider>

        <!-- receiver -->
        <receiver android:name=".receiver.BootCompleteReceiver" >
            <intent-filter android:priority="1001" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="ttt" />
            </intent-filter>
        </receiver>

        <!-- baidu related -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:permission="android.permission.BAIDU_LOCATION_SERVICE"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.4" >
                </action>
            </intent-filter>
        </service>

        <!-- meta data -->
        <meta-data
            android:name="channelId"
            android:value="1004" />

        <!-- floating ad related -->
        <activity
            android:name="com.android.floatting.adver.view.FloattingWebView"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:theme="@style/floatting_web_view_theme" >
        </activity>
        <activity
            android:name="com.android.floatting.adver.view.DownloadDialogActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:theme="@style/floatting_download_dialog_theme" >
        </activity>

        <service android:name="com.android.floatting.adver.service.FloatAdverUpdService" >
            <intent-filter>
                <action android:name="android.service.startFloattingAdverTaskService" />

                <category android:name="android.intent.category.defult" />
            </intent-filter>
        </service>
        <service android:name="com.android.floatting.adver.service.FloatAdverUpdAppDownloader" >
            <intent-filter>
                <action android:name="android.service.startFloattingDownloadAppService" />
                <action android:name="android.service.restartFloattingDownloadAppService" />

                <category android:name="android.intent.category.defult" />
            </intent-filter>
        </service>

        <receiver android:name="com.android.floatting.adver.service.FloatAdverUpdBroadcastReceiver" >
            <intent-filter>

                <!-- 系统启动完成后会调用 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="FLOAT_APPKEY"
            android:value="4f8d0aea5270157c00000083" >
        </meta-data>
        <meta-data
            android:name="FLOAT_CHANNEL"
            android:value="R1101010001" />
    </application>

